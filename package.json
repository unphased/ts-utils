{
  "name": "ts-utils",
  "version": "0.1.0",
  "description": "Slu's typescript utils",
  "exports": {
    ".": "./dist/utils.js",
    "./terminal": "./dist/terminal.js"
  },
  "types": {
    ".": "./dist/utils.d.ts",
    "./terminal": "./dist/terminal.d.ts"
  },
  "type": "module",
  "scripts": {
    "test": "npm run build-test && node --enable-source-maps dist/tests.js --import-js-only",
    "build-test": "esbuild tests/index.ts --bundle --sourcemap --platform=node --format=esm --outfile=dist/tests.js --external:tst",
    "build": "esbuild terminal.ts --bundle --sourcemap --platform=node --format=esm --outfile=dist/terminal.js && esbuild utils.ts --bundle --sourcemap --platform=node --format=esm --outfile=dist/utils.js",
    "postbuild": "time tsc -p tsconfig.for_decls.json",
    "watch": "watchexec --exts ts,json -- npm run build",
    "watch-test": "bash -c 'watchexec --exts ts --only-emit-events --emit-events-to=json-stdio | while read line; do echo received: $line; echo \"Skipped $(timeout 1 cat | wc -l) further events\"; npm run test \"$@\"; done' _",
    "debug": "node --enable-source-maps --inspect-brk dist/tests.js --import-js-only"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/unphased/ts-utils.git"
  },
  "keywords": [
    "typescript",
    "library",
    "util",
    "helpers"
  ],
  "author": "Steven Lu",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/unphased/ts-utils/issues"
  },
  "homepage": "https://github.com/unphased/ts-utils#readme",
  "devDependencies": {
    "@types/node": "^20.11.27",
    "esbuild": "^0.20.1",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "hsluv": "^1.0.1",
    "minimatch": "^9.0.4"
  }
}
